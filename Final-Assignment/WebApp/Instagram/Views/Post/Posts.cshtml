@model IEnumerable<Post>

<h2>Posts from @($"{Model.First().User.FirstName} {Model.First().User.LastName}")</h2>
<div>
    <img src="@Model.First().User.ProfileUrl" class="profile-pic" />
</div>
<br />
<table class="table table-borderless">
    <thead>
        <tr>
            <th style="width:33%">Timestamp</th>
            <th style="width:33%">Caption</th>
            <th style="width:33%">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var posts in Model)
        {
            <tr>
                <td style="width:33%">@posts.Timestamp</td>
                <td style="width:33%">@posts.Caption</td>
                <td style="width:33%">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Post", new { id = posts.PostId, userId = Model.First().User.UserId })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="javascript:window.history.back();">Return</a>